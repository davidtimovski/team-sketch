<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TeamSketch.ViewModels"
        x:Class="TeamSketch.Views.EnterWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Team Sketch">

	<Window.Styles>
		<Style Selector="Window">
			<!--<Setter Property="Icon" Value="/Assets/logo.ico" />-->
			<Setter Property="SizeToContent" Value="WidthAndHeight" />
			<Setter Property="Padding" Value="15 10" />
		</Style>
	</Window.Styles>

    <Design.DataContext>
        <vm:EnterViewModel/>
    </Design.DataContext>

	<StackPanel>
		<Border>
			<DockPanel>
				<Button Command="{Binding OnToggleTabCommand}" IsEnabled="{Binding JoinTabVisible}">Create</Button>
				<Button Command="{Binding OnToggleTabCommand}" IsEnabled="{Binding !JoinTabVisible}">Join</Button>
			</DockPanel>
		</Border>

		<Border>
			<Panel>
				<StackPanel IsVisible="{Binding !JoinTabVisible}">
					<TextBox Text="{Binding Nickname}" Watermark="Nickname" />

					<Button Name="createButton" HotKey="Enter">Create</Button>
				</StackPanel>

				<StackPanel IsVisible="{Binding JoinTabVisible}">
					<TextBox Text="{Binding Nickname}" Watermark="Nickname" />
					<TextBox Text="{Binding Room}" Watermark="Room" />

					<Button Name="joinButton" HotKey="Enter">Join</Button>
				</StackPanel>
			</Panel>
		</Border>
	</StackPanel>

</Window>
