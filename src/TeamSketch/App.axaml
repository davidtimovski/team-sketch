<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:TeamSketch"
             x:Class="TeamSketch.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

	<Application.Resources>
		<FontFamily x:Key="MainFontFamily">resm:TeamSketch.Assets.Fonts?assembly=TeamSketch#Red Hat Display</FontFamily>
		<SolidColorBrush x:Key="PrimaryColor">#2181ff</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryColorLight">#3191ff</SolidColorBrush>
	</Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Light"/>
		<StyleInclude Source="avares://TeamSketch/Assets/Icons.axaml" />

		<Style Selector="TextBox">
			<Setter Property="CornerRadius" Value="5" />
			<Setter Property="SelectionBrush" Value="#bdf" />
			<Setter Property="FontSize" Value="16" />
		</Style>
		<Style Selector="Button">
			<Setter Property="FontSize" Value="16" />
			<Setter Property="CornerRadius" Value="5" />
		</Style>
    </Application.Styles>
</Application>
